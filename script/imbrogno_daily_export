#!/bin/sh
#
# imbrogno_daily_export and the SQL-Query imbrogno_daily_export.sql:
# Exports all datasets into a csv file, that where uploaded on that day, where the location is within a radius of 3000 meter from
# the citycenter of: Uppsala, Hong Kong, Seoul, Taipei, Amsterdam, Perth, Sydney, Honolulu and Munich
# to prevent a timeout of the API
#
psql -U safecast --host $POSTGRESQL_ADDRESS safecast -f /var/deploy/api.safecast.org/web_head/current/script/imbrogno_daily_export.sql
echo "ID,User ID,Captured Time,Latitude,Longitude,Value,Unit,Device ID" | cat - /tmp/imbrogno_daily_exp.csv > /var/deploy/api.safecast.org/web_head/shared/system/imbro_daily_out.csv
cd /var/deploy/api.safecast.org/web_head/shared/system/ && tar -czf imbro_daily_out.tar.gz imbro_daily_out.csv
mv imbro_daily_out.tar.gz imbrogno_daily_export.tar.gz && mv imbro_daily_out.csv imbrogno_daily_export.csv

rsync -Havq --bwlimit 10000 /var/deploy/api.safecast.org/web_head/shared/system/imbrogno_daily_export.* reindeer.api.safecast.org.c66.me:/var/deploy/api.safecast.org/web_head/shared/system/
