<%= content_for(:title) do %>
    <%= @device_story.last_location_name %>
<%- end -%>

<div class="span9">
    <div class="row">
        <h2>
            <%= @device_story.last_location_name %> (<%= @device_story.device_urn %>)
        </h2>

        <div class="span2">
            <table class="table table-hover">
                <thead>
                    <%= time_ago_in_words(@device_story.last_seen) %> ago (<%= @device_story.last_seen %>)
                </thead>
                <tr>
                    <td style="font-size: 25px"><%= @device_story.last_values %></td>
                </tr>
            </table>
            <h4><%= link_to 'More sensor data', grafana_more_data(@device_story.device_urn), target: :_blank %></h4>
        </div>

        <div class="span7">
            <iframe 
                src="<%= grafana_iframe(@device_story.device_urn, grafana_panel(:cpm)) %>"
                width="100%" height="250" frameborder="0">
            </iframe>
        </div>
    </div>
    <div class="spacer"></div>
    
    <div class="row">
        <iframe 
            src="<%= grafana_iframe(@device_story.device_urn, grafana_panel(:map)) %>"
            width="100%" height="400" frameborder="0">
        </iframe>
    </div>
</div>

<div class="spacer"></div>
<%= current_page_api_example :device_stories_url %>
